# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.v]
indent_style = space
indent_size = 8

[*.rst]
indent_style = space
indent_size = 3

[Makefile]
indent_style = tab
